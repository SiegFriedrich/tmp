<template>
  <v-container>
    <Form @submit="onSubmit">
      <Field name="name" rules="required" v-slot="{ field, errors }">
        <v-text-field v-bind="field" label="Name" :error-messages="errors"></v-text-field>
      </Field>

      <Field name="email" rules="required|email" v-slot="{ field, errors }">
        <v-text-field v-bind="field" label="Email" :error-messages="errors"></v-text-field>
      </Field>

      <Field name="password" rules="required|min:6" v-slot="{ field, errors }">
        <v-text-field
          v-bind="field"
          label="Password"
          type="password"
          :error-messages="errors"
        ></v-text-field>
      </Field>

      <v-btn type="submit">Submit</v-btn>
    </Form>
  </v-container>
</template>

<script setup>
import { defineRule, configure } from 'vee-validate';
import { required, email, min } from '@vee-validate/rules';
import { Form, Field } from 'vee-validate';

// 定义验证规则
defineRule('required', required);
defineRule('email', email);
defineRule('min', min);

// 配置验证模式为 eager
configure({
  validateOnInput: true, // 开启 eager 模式
});

const onSubmit = (values) => {
  alert(JSON.stringify(values));
};
</script>

<style scoped>
/* 这里可以添加一些样式 */
</style>
